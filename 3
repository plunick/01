while True: # Начало бесконечного цикла. Цикл будет выполняться бесконечно, пока не будет выполнено условие break, которое завершает цикл
    def is_fibonacci(n):    # Возвращает True, если число n является числом Фибоначчи, и False в противном случае.  
        if n < 0:
            return False

        a, b = 0, 1
        while b < n:
            a, b = b, a + b

        return b == n

    num = int(input("Введите число для проверки принадлежности к числам Фиббоначи: ")) #Запрос у пользователя на ввод числа "num"

    if is_fibonacci(num):   #Вызов функции "is_fibonacci(num)"
        print(f"{num} является числом Фиббоначи.")
    else:
        print(f"{num} не является числом Фиббоначи.")
        
    num3 = float(input("\n1 - Ввести следующее число \n2 - Завершить \n"))
    if num3 == 1:
        continue
    else:
        break   
